local function L()
	J.Text="\240\159\148\141 Copying game scripts..."task.wait(0.3)
	local M,N={},[[--[[ üß† AXX Game Lua Dump (by agha_yt1x)
üì¶ Recreated from client-side only.
‚ùå ServerScripts / ServerStorage excluded.
--]]]]

	for _,O in ipairs(game:GetDescendants())do
		pcall(function()
			if O:IsA("LocalScript")or O:IsA("ModuleScript")then
				local P="-- "..O:GetFullName().."\n"..O.Source
				table.insert(M,P)
			end
		end)
	end

	local Q=N.."\n\n"..table.concat(M,"\n\n")
	setclipboard(Q)
	J.Text="\226\156\150 Copied successfully. Disconnecting..."

	task.delay(2,function()
		F:Kick("‚úÖ Full Game Dumped to Clipboard")
	end)
end

K.MouseButton1Click:Connect(L)

-- Drag
local R,S,T,U=nil,.25,nil,nil
H.InputBegan:Connect(function(V)
	if V.UserInputType==Enum.UserInputType.MouseButton1 then
		R=true;U=V.Position;T=H.Position
		V.Changed:Connect(function()
			if V.UserInputState==Enum.UserInputState.End then R=false end
		end)
	end
end)
H.InputChanged:Connect(function(V)if V.UserInputType==Enum.UserInputType.MouseMovement then S=V end end)
D.InputChanged:Connect(function(V)
	if V==S and R then
		local W=V.Position-U
		H.Position=UDim2.new(T.X.Scale,T.X.Offset+W.X,T.Y.Scale,T.Y.Offset+W.Y)
	end
end)
