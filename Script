-- APZ.XX Custom Copier üíæüîê
-- v1.7 - Password Button Added + Avatar + Effects

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")
local MarketplaceService = game:GetService("MarketplaceService")
local TweenService = game:GetService("TweenService")
local StarterGui = game:GetService("StarterGui")

local LP = Players.LocalPlayer
local Clock = os.clock
local function ts(s) return string.format("‚è± %.2fs", Clock() - s) end

-- GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "APZ_XX_Custom_Copier"
gui.ResetOnSpawn = false
if syn and syn.protect_gui then
    syn.protect_gui(gui)
    gui.Parent = CoreGui
elseif gethui then
    gui.Parent = gethui()
else
    gui.Parent = CoreGui
end

local particle = Instance.new("ParticleEmitter")
particle.Texture = "rbxassetid://296874871"
particle.Rate = 10
particle.Lifetime = NumberRange.new(2)
particle.Speed = NumberRange.new(1, 2)
particle.VelocitySpread = 180
particle.Enabled = true

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 480, 0, 220)
mainFrame.Position = UDim2.new(0.5, -240, 0.5, -110)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.BackgroundTransparency = 0.05
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Name = "MainFrame"
mainFrame.Parent = gui

-- Avatar Icon
local avatarImage = Instance.new("ImageLabel")
avatarImage.Size = UDim2.new(0, 70, 0, 70)
avatarImage.Position = UDim2.new(0, 5, 0, 5)
avatarImage.BackgroundTransparency = 1
avatarImage.Image = "rbxassetid://17272412977"
avatarImage.Parent = mainFrame

local particlePart = Instance.new("Part")
particlePart.Anchored = true
particlePart.CanCollide = false
particlePart.Transparency = 1
particlePart.Size = Vector3.new(1,1,1)
particlePart.Parent = workspace
particle:Clone().Parent = particlePart

local titleBar = Instance.new("TextLabel", mainFrame)
titleBar.Size = UDim2.new(1, 0, 0, 40)
titleBar.BackgroundColor3 = Color3.fromRGB(30,30,30)
titleBar.Text = "üíæ APZ.XX Custom Copier üîê"
titleBar.TextColor3 = Color3.new(1,1,1)
titleBar.Font = Enum.Font.Code
titleBar.TextSize = 20

titleBar.MouseEnter:Connect(function()
    particlePart.Position = LP.Character and LP.Character:FindFirstChild("Head") and LP.Character.Head.Position + Vector3.new(0, 5, 0) or Vector3.new(0, 20, 0)
end)

-- Get Password Button
local getPass = Instance.new("TextButton")
getPass.Size = UDim2.new(0, 200, 0, 35)
getPass.Position = UDim2.new(0.5, -100, 1, -45)
getPass.Text = "üîë Get Password"
getPass.BackgroundColor3 = Color3.fromRGB(35,35,35)
getPass.TextColor3 = Color3.fromRGB(255,255,255)
getPass.Font = Enum.Font.Code
getPass.TextSize = 18
getPass.Parent = mainFrame

getPass.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/TxKEYk8HrF")
    StarterGui:SetCore("SendNotification", {
        Title = "Password Link Copied!",
        Text = "üîó Join Discord to get password.",
        Duration = 4
    })
end)
